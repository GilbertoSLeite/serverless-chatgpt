{
  "compilerOptions": {    
    "types": ["mocha", "chai", "sinon", "node"],
    "target": "ES2020",  
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,        
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
      "**/*.ts",
      "services/**/*.ts",
  ],
  "exclude": [
      "node_modules",
      "dist",
  ]
}
